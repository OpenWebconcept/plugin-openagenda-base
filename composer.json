{
    "name" : "acato/openagenda-base",
    "type" : "wordpress-plugin",
    "description": "Adds OpenAgenda to your WordPress website.",
    "authors": [
        {
            "name": "Eyal Beker",
            "email": "eyal@acato.nl",
            "homepage": "https://acato.nl",
            "role": "Backend WordPress Developer"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "git@bitbucket.org:acato/wp-pre-commit-hook.git"
        }
    ],
    "require" : {
        "composer/installers" : "~1.0"
    },
    "require-dev" : {
        "acato/wp-pre-commit-hook": "*",
        "phpcompatibility/phpcompatibility-wp": "*"
    },
    "config" : {
        "allow-plugins" : {
            "composer/installers" : true,
            "dealerdirect/phpcodesniffer-composer-installer" : true,
            "acato/wp-pre-commit-hook": true
        }
    }
}
